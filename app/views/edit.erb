<%if @errors %>
  <%@errors.each do |error|%>
  <h4 style="color: red"><%=error%></h4>
  <%end%>
<%end%>
<form method="Post" action="/<%=@comment_type%>/<%=@class_obj.id%>" align="center">
  <h1>Edit your <%= @comment_type.downcase %></h1>
  <input type="hidden" name="_method" value="PUT">
  <input type="hidden" name="question_id" value=@question_id>
  <label for="edit-field">Content:</label>
  <textarea id="edit-field" rows="4" cols="20" name="body_text"><%=@class_obj.body%></textarea>
  <input type="submit" value="Edit">
</form>
