<h1>Comment for <%=@commentable_type%> <%=@commentable_id%></h1>
<%if @errors %>
  <%@errors.each do |error|%>
  <h4 style="color: red"><%=error%></h4>
  <%end%>
<%end%>
<form method="Post" action="/<%=@commentable_type%>/<%=@commentable_id%>/comments" align="center">
  Comment text:
  <input type="body" name="body">
  <input type="submit" value="Post Comment">
</form>
